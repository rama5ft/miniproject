<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <nav class="navbar fixed-top  navbar-expand-lg navbar-dark bg-primary">
        <a class="navbar-brand" href="#"></a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarColor01" aria-controls="navbarColor01" aria-expanded="false" .......>
            <span class="navbar-toggler-icon"></span>
        </button>
        @Html.ActionLink("HCL HealthCare", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })

        <div class="navbar-collapse collapse">
            <ul class="nav navbar-nav">

                <li>@Html.ActionLink("Home", "Index", "Home", null, new { @class = "nav-link" })</li>
                <li>@Html.ActionLink("About", "About", "Home", null, new { @class = "nav-link" })</li>
                <li>@Html.ActionLink("Upcoming Events", "UpcomingEvents", "Home", null, new { @class = "nav-link" })</li>
                <li>@Html.ActionLink("Book Appointment", "LoginView", "Home", null, new { @class = "nav-link" })</li>
                <li>@Html.ActionLink("Admin", "Admin", "Home", null, new { @class = "nav-link" })</li>

                @*<li>@Html.ActionLink("Contact", "Contact", "Home", null, new { @class = "nav-link" })</li>*@
            </ul>
            <ol class="nav navbar-nav navbar-right">

                @Html.Partial("_LoginPartialHome", new { @class = "navbar-link" })

            </ol>
          
        </div>
        </nav>
        <div class="container body-content">
            @RenderBody()
            <hr />
            <footer>
                <p>&copy; @System.DateTime.Now.ToString("yyyy") -HCL HealthCare</p>
            </footer>
        </div>

        @Scripts.Render("~/bundles/jquery")
        @Scripts.Render("~/bundles/bootstrap")
        @RenderSection("scripts", required: false)
</body>
</html>
