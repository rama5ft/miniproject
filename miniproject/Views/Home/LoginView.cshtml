@model miniproject.Models.Login
@{
    ViewBag.Title = "Login";
}
<br />
<div style="background-image: url(/Images/13971.jpg);background-repeat:no-repeat;background-size:cover">
    <center>
        <img src="~/Images/login2.png" width="200" height="200" />
    </center>

    <br />




    <center>


        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken() // this is for prevent CSRF attack
            @Html.ValidationSummary(true)
            if (@ViewBag.Message != null)
            {
                <div style="border: 1px solid red">
                    @ViewBag.Message
                </div>
            }
            <div class="form-group">
                <b style="color:white"> @Html.Label("EmailId/SapId") </b>
               
                @Html.TextBoxFor(c => c.UserName, new { @class = "form-control", autocomplete = "off", required = true })
                @Html.ValidationMessageFor(c => c.UserName)
            </div>
            <center>
                <div class="form-group">
                    <b style="color:white">   @Html.LabelFor(a => a.Password) </b>
                  
                    @Html.PasswordFor(a => a.Password, new { @class = "form-control", autocomplete = "off", required = true })
                    @Html.ValidationMessageFor(a => a.Password)

                </div>
            </center>

            <div class="form-group">

                <input type="submit" name="cmdsubmit" value="Login" class="btn btn-outline-primary" />


            </div>
            @Html.ActionLink("BackToList", "Index", "Home")
        }

    </center>

    </div>
