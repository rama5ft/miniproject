@model miniproject.ViewModel.CommonViewModel

@{
    ViewBag.Title = "AddDoctor";
    Layout = "~/Views/Shared/_HomeLayout.cshtml";
}

<h2>AddDoctor</h2>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">
    <div class="form-group">
        @Html.LabelFor(m => m.Doctor.DoctorName)
        @Html.TextBoxFor(m => m.Doctor.DoctorName, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Doctor.DoctorName)

    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Doctor.DocEmailId)
        @Html.TextBoxFor(m => m.Doctor.DocEmailId, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Doctor.DocEmailId)

    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Doctor.Experience)
        @Html.TextBoxFor(m => m.Doctor.Experience, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Doctor.Experience)

    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Doctor.Specialization)
        @Html.TextBoxFor(m => m.Doctor.Specialization, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Doctor.Specialization)

    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Doctor.HospitalName)
        @Html.TextBoxFor(m => m.Doctor.HospitalName, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Doctor.HospitalName)

    </div> <div class="form-group">
        @Html.LabelFor(m => m.Doctor.HospitalAddress)
        @Html.TextBoxFor(m => m.Doctor.HospitalAddress, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Doctor.HospitalAddress)

    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Doctor.LocationId)
        @Html.DropDownListFor(m => m.Doctor.LocationId, new SelectList(Model.Location, "LocationId", "City"), "Select City", new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Doctor.LocationId)
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Create" class="btn btn-default" />
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
